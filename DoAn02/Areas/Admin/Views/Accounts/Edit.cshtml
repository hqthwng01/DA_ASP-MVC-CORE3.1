@model DoAn02.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa Tài Khoản</h1>

<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Bảng Tạo Tài Khoản</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form asp-controller="Accounts" asp-action="Edit" class="form" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="first-name-column">USERNAME</label>
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Username">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="last-name-column">HỌ VÀ TÊN</label>
                                        <input asp-for="FullName" type="text" class="form-control" placeholder="Họ và Tên..">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="city-column">PASSWORD</label>
                                        <input asp-for="Password" type="text" class="form-control" placeholder="Password">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="country-floating">SĐT</label>
                                        <input asp-for="Phone" type="text" class="form-control" placeholder="SĐT">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="company-column">ĐỊA CHỈ</label>
                                        <input asp-for="Address" type="text" class="form-control" placeholder="123,HCM..">
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="email-id-column">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <label for="city-column">HÌNH ẢNH</label>
                                    <div class="center">
                                        <img src="~/avt/@Model.Avatar" style="width:150px;height:150px" id="file-ip-1-preview">
                                        <input type="file" name="AvtFile" id="file-ip-1" accept="image/*" onchange="showPreview(event);">
                                    </div>
                                </div>


                                <div class="form-group col-12">
                                    <div class='form-check'>
                                        <div class="checkbox">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <div class='form-check'>
                                        <div class="checkbox">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" value="Save" class="btn btn-primary me-1 mb-1" id="success">Save</button>
                                </div>
                            </div>
                        </form>
                        <div>
                            <a asp-action="Index">Trở Lại Danh Sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- // Basic multiple Column Form section end -->
