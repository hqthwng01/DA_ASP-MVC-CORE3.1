<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Chỉnh sửa hóa đơn</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <input type="hidden" class="form-control" asp-for="AccountId">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="first-name-column">Code</label>
                                            <input type="text" class="form-control" asp-for="Code">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="last-name-column">Ngày tạo</label>
                                            <input type="text" class="form-control" asp-for="IssuedDate">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="last-name-column">Họ và tên</label>
                                            <input type="text" class="form-control" asp-for="Fullname">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="city-column">Email</label>
                                            <input type="text" class="form-control" asp-for="Email">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="country-floating">Địa chỉ</label>
                                            <input type="text" class="form-control" asp-for="ShippingAddress">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="company-column">SĐT</label>
                                            <input type="text" class="form-control" asp-for="ShippingPhone">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Tổng tiền</label>
                                            <input type="hidden" class="form-control" asp-for="Total">
                                            <label class="form-control">@Model.Total.ToString("#,##0 VNĐ")</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label>Trạng thái</label>
                                            <fieldset class="form-group">
                                                <select asp-for="StatusId" class="form-control" asp-items="@ViewBag.Trangthai">
                                                </select>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Lưu</button>
                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">
                                            <div><a asp-action="Index">Quay lại</a></div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


