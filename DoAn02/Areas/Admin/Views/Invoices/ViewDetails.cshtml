@model Tuple<IEnumerable<DoAn02.Models.Invoice>, IEnumerable<DoAn02.Models.InvoiceDetail>>
@{
    ViewData["Title"] = "ViewDetails";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ViewDetails</h1>
<section class="section">
    <div class="card">
        <div class="card-header">
            <h1>HÓA ĐƠN</h1>
            <p>
                <a asp-area="Admin" asp-controller="Invoices" asp-action="Create" class="btn btn-primary">TẠO HÓA ĐƠN</a>
            </p>
        </div>
        <div class="card-body">
            <table class="table" id="table1">
                <thead>
                    <tr>
                        <th>
                            Code
                        </th>
                        <th>
                            Ngày Tạo
                        </th>
                        <th>
                            Họ Tên
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            SĐT
                        </th>
                        <th>
                            Tổng Tiền
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item1)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Account.Username)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.IssuedDate)
                            </td>
                            <td>
                                @item.Fullname
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingPhone)
                            </td>
                            <td>
                                @item.Total.ToString("#,##0VNĐ")
                            </td>
                            @*<td>
                                    @if(ViewBag.Trangthai == "1")
                                    {
                                        <span class="badge bg-success text-white">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">Pending</span>
                                    }
                                </td>*@
                            <td>
                                @if (item.StatusId == 0)
                                {
                                    <span class="badge bg-success text-white">Hoàn thành</span>
                                }
                                @if (item.StatusId == 1)
                                {
                                    <span class="badge bg-primary text-white">Đang giao hàng</span>
                                }
                                @if (item.StatusId == 2)
                                {
                                    <span class="badge bg-danger text-white">Hủy đơn</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class='bx bx-edit'></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class='bx bx-show'></i></a>
                                <a asp-action="ViewDetails" asp-route-id="@item.invoiceDetails" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalCenter"><i class='bx bxs-credit-card-front'></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class='bx bx-trash'></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<table class="table">
    <thead>
        <tr>
            <th>
                Hóa Đơn
            </th>
            <th>
                Mã SP
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Đơn Giá
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Invoice.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


