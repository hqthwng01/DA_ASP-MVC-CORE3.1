@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutShop";
    string username = ViewBag.AccountUsername;
    if (ViewBag.AccountUsername != null)
    {
        username = ViewBag.AccountUsername;
    }
    else
    {
        username = "Khách";
    }
}

@section head{
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>iShop - Cửa Hàng Điện Thoại Di Động Online</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets-shop/img/favicon.ico">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">


    <!-- Plugins CSS -->
    <link rel="stylesheet" href="~/assets-shop/css/plugins.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="~/assets-shop/css/style.css">
    <link rel="stylesheet" href="~/assets-shop/css/custom.css">
}

    <section class="account">
        <div class="row justify-content-center">
            <div class="">
                <div class="account-contents" style="background: url('~/assets-shop/img/about/about1.jpg'); background-size: cover;">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="account-thumb">
                                <h2>Đăng kí tài khoản</h2>
                                <p>Đăng kí tài khoản nhanh chóng với Identity</p>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="account-content">
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="single-acc-field">
                                        <label for="name">Email</label>
                                        <input asp-for="Input.Email" type="text" id="name" placeholder="email@gmail.com...">
                                    </div>
                                    <div class="single-acc-field">
                                        <label for="password">Password</label>
                                        <input asp-for="Input.Password" type="password" id="password" placeholder="Bao gồm số và kí tự đặc biệt..">
                                    </div>
                                    <div class="single-acc-field">
                                        <label for="password">Xác nhận Password</label>
                                        <input asp-for="Input.ConfirmPassword" type="password" id="password" placeholder="Nhập lại Password...">
                                    </div>
                                    <div class="single-acc-field boxes">
                                        <input type="checkbox" id="checkbox">
                                        <label for="checkbox">I'm not a robot</label>
                                    </div>
                                    <div class="single-acc-field">
                                        <button type="submit">Đăng kí</button>
                                    </div>
                                    <a asp-area="Identity" asp-page="/Account/Login">Đã có tài khoản? Đăng nhập tại đây</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
